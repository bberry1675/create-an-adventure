<!DOCTYPE html>
<html>
<head>
    <% include('./partials/head.ejs') %> 
</head>
<body>
    <h1><%- story %> </h1>
    <% actions.forEach(element => { %>
        <a href="/node/<%- element._id %>"><%- element.action %></a><br> 
    <% }) %>

    <br>
    <form action="/node/<%- node_id %>/new" id="diverge_form" method="POST">
        <label for="action">Enter the action:</label>
        <input type="text" id="action" name="action"/>
        <br>
        <textarea placeholder="Enter Your Part Of The Story Here..." rows="6" cols="70"  form="diverge_form" name="story"></textarea>
        <br>
        <button type="submit">Diverge</button>
    </form>
</body>
</html>